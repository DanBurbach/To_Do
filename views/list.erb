<h1><%= @name %></h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.list_id == @list_id %>
      <li><%= task.name %>: <%= task.description %> (due in <%= task.due_date %> days), <%= task.list_id %>, <%= task.id %></li>
    <% end %>
  <% end %>
</ul>

<h2>Add to your list</h2>
<form action="/add_item/<%= @list_id %>" method="post">
  <div class="form-group">
    <label for="name">Name your task</label>
    <input type="text" name="name" required pattern=".*\S+.*" title= "This field is required"class="form-control">
  </div>
  <div class="form-group">
    <label for="description">Describe your task</label>
    <input type="text" name="description" required pattern=".*\S+.*" title= "This field is required"class="form-control">
  </div>
  <div class="form-group">
    <label for="due_date">List number of days it's due in</label>
    <input type="number" name="due_date" required pattern=".*\S+.*" title= "This field is required" class="form-control">
  </div>
  <button type="submit" name="button">Add Task</button>
</form>
